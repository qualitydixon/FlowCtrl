<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button android:id="@+id/scanIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:elevation="4dp"
        android:text="@string/scan_in"
        android:onClick="scanIn"
        style="?android:attr/borderlessButtonStyle"
        android:background="@color/my_green"
        android:layout_marginTop="20dp"/>

    <Button android:id="@+id/scanOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_above="@id/scanIn"
        android:text="@string/scan_out"
        android:onClick="scanOut"
        style="?android:attr/borderlessButtonStyle"

        android:background="@color/my_orange"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>



</RelativeLayout>
